@model Client.Models.Users.SignInViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="blue-container">
    <div class="signup-form pt-5">
        @using (@Html.BeginForm("SignInPostAsync", "UserManagement", FormMethod.Post))
        {
            <h2>Login</h2>
            <p>Enter your user name and password to login</p>
            <hr>
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", type = "user name", placeholder = "UserName", required = "required" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = "required" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg">Login</button>
            </div>
        }
        <div class="hint-text">Need an account? <a asp-controller="UserManagement" asp-action="SignUp">Sign up here</a></div>
    </div>
</div>