@model Client.Models.Users.SignInViewModel

@{
    ViewData["Title"] = "Sign in";
    Layout = "_Init";
}

<div class="blue-container">
    <div class="signup-form pt-5">
        @using (@Html.BeginForm("SignInPostAsync", "UserManagement"))
        {
            <h2>Login</h2>
            <p>Enter your user name and password to login</p>
            <hr>
            <div class="form-group">
                <input asp-for="UserName" class="form-control" placeholder="UserName" required autocomplete="off">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="password" asp-for="Password" class="form-control" placeholder="Password" required autocomplete="off">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg">Login</button>
            </div>
        }
        <div class="hint-text">Need an account? @Html.ActionLink("Sign up here", "SignUp")</div>
    </div>
</div>