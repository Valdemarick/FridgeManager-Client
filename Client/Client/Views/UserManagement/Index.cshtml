@model Client.Models.Users.SignInViewModel

@{
    ViewData["Title"] = "Sign in";
    Layout = "_Init";
}

<div class="blue-container">
    <div class="signup-form pt-5">
        @using (@Html.BeginForm("SignInPostAsync", "UserManagement"))
        {
            <h2>Login</h2>
            <p>Enter your user name and password to login</p>
            <hr>
            <div class="form-group">
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "UserName", required = "required" })
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
            <div class="form-group">
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password", required = "required" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg">Login</button>
            </div>
        }
        <div class="hint-text">Need an account? @Html.ActionLink("Sign up here", "SignUp")</div>
    </div>
</div>