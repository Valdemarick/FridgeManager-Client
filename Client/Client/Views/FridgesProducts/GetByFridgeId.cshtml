@model Client.Models.FridgeProducts.FridgeProductViewModel

@{
    ViewData["Title"] = "Fridge Products";
}

<div id="PlaceHolderHere"></div>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Fridge Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add Product(s)
            </a>
        </div>
    </div>
    <br /><br />

    <table class="products-table table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Name")
                </th>
                <th>
                    @Html.DisplayName("Quantity")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.FridgeProducts)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.ProductQuantity)
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            @using (@Html.BeginForm("Update", "FridgesProducts"))
                            {
                                @Html.Hidden("Id", item.Id)
                                @Html.Hidden("FridgeId", item.FridgeId)
                                @Html.Hidden("ProductId", item.ProductId)
                                @Html.Hidden("ProductQuantity", item.ProductQuantity)
                                <button type="submit" class="btn btn-warning mx-2"><i class="bi bi-pencil-square"></i>Update</button>
                            }
                            <form>
                                <button type="button" class="btn btn-danger mx-2" data-toggle="ajax-modal" data-target="#remove"
                                    data-url="@Url.Action($"Delete/{item.Id}")"><i class="bi bi-trash-fill"></i>Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>