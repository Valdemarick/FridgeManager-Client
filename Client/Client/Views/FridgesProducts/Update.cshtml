@model Client.Models.FridgeProducts.FridgeProductForUpdateViewModel

@{
    ViewData["Title"] = "Update a fridge product";
}

<div class="blue-container">
    <div class="signup-form pt-5">
        @using (@Html.BeginForm("UpdateFridgeProductAsync", "FridgesProducts"))
        {
            <h2>Update</h2>
            <p>Enter data to update the product</p>
            <hr />
            @Html.Hidden("Id", @Model.Id)
            @Html.Hidden("FridgeId", @Model.FridgeId)
            @Html.Hidden("ProductId", @Model.ProductId)
            <div class="form-group">
                @Html.TextBoxFor(model => model.ProductQuantity, new { @class="form-control", required="required", placeholder="Quantity" })
                @Html.ValidationMessageFor(model => model.ProductQuantity)
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg">Update</button>
            </div>
        }
        <div class="hint-text">@Html.ActionLink("Back to List", "GetByFridgeId", "FridgesProducts", new { fridgeId = @Model.FridgeId })</div>
    </div>
</div>