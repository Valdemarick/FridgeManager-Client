@model Client.Models.Products.ProductsViewModel

@{
    ViewData["Title"] = "Products";
}

<div id="PlaceHolderHere"></div>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>
    <br /><br />

    <div>
        <table class="products-table table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Name")
                    </th>
                    <th>
                        @Html.DisplayName("Quantity")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                @using (@Html.BeginForm("Update", "Products"))
                                {
                                    @Html.Hidden("Id", item.Id)
                                    @Html.Hidden("Name", item.Name)
                                    @Html.Hidden("Quantity", item.Quantity)
                                    <button type="submit" class="btn btn-warning mx-2"><i class="bi bi-pencil-square"></i>Update</button>
                                }
                                <form>
                                    <button type="button" class="btn btn-danger mx-2" data-toggle="ajax-modal" data-target="#remove"
                                        data-url="@Url.Action($"Delete/{item.Id}")">
                                        <i class="bi bi-trash-fill"></i>Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>