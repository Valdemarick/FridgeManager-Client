@model Client.Models.Products.ProductsViewModel

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<p>
    <a asp-controller="Products" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(productItem => productItem.Products[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(productItem => productItem.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(productItem => productItem.Products[0].Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @using(Html.BeginForm("Update", "Products"))
                {
                    @Html.Hidden("Id", item.Id)
                    @Html.Hidden("Name", item.Name)
                    @Html.Hidden("Quantity", item.Quantity);
                    <input type="submit"  value="Update"/>
                }
                @using (Html.BeginForm("DeleteProductAsync", "Products")){
                    @Html.Hidden("Id", item.Id)
                    <input type="submit" value="Delete"/>
                }
            </td>
        </tr>
}
    </tbody>
</table>
