@model Client.Models.Fridges.FridgeForUpdateViewModel

@{
    ViewData["Title"] = "Update a fridge";
}

<div class="blue-container">
    <div class="signup-form pt-5">
        @using (@Html.BeginForm("UpdateFridgeAsync", "Fridges", FormMethod.Post))
        {
            <h2>Create</h2>
            <p>Enter data to create a fridge</p>
            <hr />
            @Html.Hidden("Id", @Model.Id)
            <div class="form-group">
                @Html.TextBoxFor(model => model.OwnerName, new { @class="form-control", placeholder="Owner Name" })
                @Html.ValidationMessageFor(model => model.OwnerName)
            </div>
            <div class="form-group">
                @Html.TextAreaFor(model => model.Description, new { @class="form-control", placeholder="Description", @cols = 50, @rows=4})
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            <div class="form-group">
                @Html.DropDownListFor(model => model.FridgeModelId, ViewBag.Models as SelectList)
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        }
        <div class="hint-text">@Html.ActionLink("Back to List", "Index")</div>
    </div>
</div>